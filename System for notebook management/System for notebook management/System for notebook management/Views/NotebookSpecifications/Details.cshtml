@model ProjectR.Models.NotebookSpecifications

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 20px;
    }

    h1, h4 {
        color: #fff;
        text-align: center;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #fff;
    }

    .form-control {
        background-color: #333;
        color: #fff;
        border: 1px solid #555;
        border-radius: 5px;
        padding: 10px;
        outline: none;
    }

        .form-control:focus {
            border-color: #fff;
            box-shadow: 0 0 5px #fff;
        }

    .form-check-input {
        border: 1px solid #555;
        background-color: #333;
        color: #fff;
    }

    .form-check-label {
        color: #fff;
    }

    .btn-primary {
        background-color: #fff;
        color: #000;
        border: 1px solid #fff;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-primary:hover {
            background-color: #000;
            color: #fff;
        }

    .text-danger {
        color: #f00;
    }

    hr {
        border-top: 1px solid #555;
    }

    a {
        color: #fff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h1>Details</h1>

<div>
    <h4>NotebookSpecifications</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsRecyclable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsRecyclable)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HasRuler)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HasRuler)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Material)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoverColor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoverColor)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
