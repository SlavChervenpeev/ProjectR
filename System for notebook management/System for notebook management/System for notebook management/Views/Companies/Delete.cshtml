@model ProjectR.Models.Company

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 20px;
    }

    h1, h4 {
        color: #fff;
        text-align: center;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #fff;
    }

    .form-control {
        background-color: #333;
        color: #fff;
        border: 1px solid #555;
        border-radius: 5px;
        padding: 10px;
        outline: none;
    }

        .form-control:focus {
            border-color: #fff;
            box-shadow: 0 0 5px #fff;
        }

    .form-check-input {
        border: 1px solid #555;
        background-color: #333;
        color: #fff;
    }

    .form-check-label {
        color: #fff;
    }

    .btn-primary {
        background-color: #fff;
        color: #000;
        border: 1px solid #fff;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-primary:hover {
            background-color: #000;
            color: #fff;
        }

    .text-danger {
        color: #f00;
    }

    hr {
        border-top: 1px solid #555;
    }

    a {
        color: #fff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfCreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearOfCreation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.companyMembers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.companyMembers)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnnualRevenue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnnualRevenue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SoldNotebooks)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoldNotebooks)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
