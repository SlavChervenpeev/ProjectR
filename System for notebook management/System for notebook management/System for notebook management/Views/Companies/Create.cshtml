@model ProjectR.Models.Company

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 20px;
    }

    h1, h4 {
        color: #fff;
        text-align: center;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #fff;
    }

    .form-control {
        background-color: #333;
        color: #fff;
        border: 1px solid #555;
        border-radius: 5px;
        padding: 10px;
        outline: none;
    }

        .form-control:focus {
            border-color: #fff;
            box-shadow: 0 0 5px #fff;
        }

    .form-check-input {
        border: 1px solid #555;
        background-color: #333;
        color: #fff;
    }

    .form-check-label {
        color: #fff;
    }

    .btn-primary {
        background-color: #fff;
        color: #000;
        border: 1px solid #fff;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-primary:hover {
            background-color: #000;
            color: #fff;
        }

    .text-danger {
        color: #f00;
    }

    hr {
        border-top: 1px solid #555;
    }

    a {
        color: #fff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h1>Create</h1>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfCreation" class="control-label"></label>
                <input asp-for="YearOfCreation" class="form-control" />
                <span asp-validation-for="YearOfCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="companyMembers" class="control-label"></label>
                <input asp-for="companyMembers" class="form-control" />
                <span asp-validation-for="companyMembers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnnualRevenue" class="control-label"></label>
                <input asp-for="AnnualRevenue" class="form-control" />
                <span asp-validation-for="AnnualRevenue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoldNotebooks" class="control-label"></label>
                <input asp-for="SoldNotebooks" class="form-control" />
                <span asp-validation-for="SoldNotebooks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
